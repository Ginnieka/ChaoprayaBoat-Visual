@page
@model NewModel
@{
}


<h1>New Coordinate</h1>

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

   <div class="form-group">
        <label asp-for="Coordinate.CodePort" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Coordinate.CodePort" class="form-control" />
            <span asp-validation-for="Coordinate.CodePort" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Coordinate.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Coordinate.Name" class="form-control" />
            <span asp-validation-for="Coordinate.Name" class="text-danger"></span>
        </div>
    </div>

     <div class="form-group">
        <label asp-for="Coordinate.Latitude" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Coordinate.Latitude" class="form-control" />
            <span asp-validation-for="Coordinate.Latitude" class="text-danger"></span>
        </div>
    </div>

     <div class="form-group">
        <label asp-for="Coordinate.Longtitude" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Coordinate.Longtitude" class="form-control" />
            <span asp-validation-for="Coordinate.Longtitude" class="text-danger"></span>
        </div>
    </div>

     <div class="form-group">
        <label asp-for="Coordinate.CoordinateType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
             <!--การทำDropDown-->
            @Html.DropDownListFor(model => model.Coordinate.CoordinateTypeId, Model.CoordinateType, "-- Choose Coordinate Type --", new { @class = "form-control" })
            <span asp-validation-for="Coordinate.CoordinateTypeId" class="text-danger"></span>
        </div>
    </div>

 


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Index" class="btn btn-default">Back</a>
        </div>
    </div>  
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}