@page
@model EditModel
@{
}



<h1>Edit Route</h1>

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Route.Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Route.Id" class="form-control" readonly="readonly" />
            <span asp-validation-for="Route.Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Route.FlagColor" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Route.FlagColor" class="form-control" />
            <span asp-validation-for="Route.FlagColor" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Route.ColorCode" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Route.ColorCode" class="form-control" />
            <span asp-validation-for="Route.ColorCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Index" class="btn btn-default">Back</a>
        </div>
    </div>  
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}