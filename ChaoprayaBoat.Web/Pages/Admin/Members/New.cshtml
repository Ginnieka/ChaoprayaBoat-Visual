@page
@model NewModel
@{
}


<h1>New Member</h1>

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="Member.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Name" class="form-control" />
            <span asp-validation-for="Member.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Member.Lastname" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Lastname" class="form-control" />
            <span asp-validation-for="Member.Lastname" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="Member.Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Email" class="form-control" />
            <span asp-validation-for="Member.Email" class="text-danger"></span>
        </div>
    </div>

            <div class="form-group">
        <label asp-for="Member.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Password" class="form-control" />
            <span asp-validation-for="Member.Password" class="text-danger"></span>
        </div>
    </div>

           <div class="form-group">
        <label asp-for="Member.Position" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Position" class="form-control" />
            <span asp-validation-for="Member.Position" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Member.Status" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Member.Status" class="form-control" />
            <span asp-validation-for="Member.Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Member.MemberTypeId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
                <!--การทำDropDown-->
            @Html.DropDownListFor(model => model.Member.MemberTypeId, Model.MemberType, "-- Choose Member Type --", new { @class = "form-control" })
            <!--การแสดง errorแดง ให้ใส่ข้อมูล-->
            <span asp-validation-for="Member.MemberTypeId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Index" class="btn btn-default">Back</a>
        </div>
    </div>  
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}