@page
@model IndexModel
@{
    ViewData["Title"] = "User";
}

<h1>User <a asp-page="/Account/Register" class="btn btn-default btn-success hidden-print">Create</a></h1>

<form method="post">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    <label asp-for="UserInfos[0].UserName"></label>
                </th>
                <th>
                    <label asp-for="UserInfos[0].Role"></label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.UserInfos) 
    {
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Role
                </td>
                <td>                    
                    <button type="submit" asp-page-handler="delete" asp-route-id="@item.UserName" class="btn btn-xs btn-danger hidden-print" onclick="return confirm('Delete?')">delete</button>
                </td>
            </tr>
    }
        </tbody>

    </table>

</form>